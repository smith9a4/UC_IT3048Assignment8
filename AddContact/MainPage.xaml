<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AddContact.MainPage"
             Title="AddContact">

    <ScrollView>
        <VerticalStackLayout Padding="10">
            <Label Text="Name: " ></Label>
            <Entry Text="{Binding Name}" Placeholder="Name"></Entry>
            <Label Text="Email: "></Label>
            <Entry Text="{Binding Email}" Placeholder="Email"></Entry>
            <Label Text="Phone Number: "></Label>
            <Entry Text="{Binding PhoneNumber}" Placeholder="Phone Number" ></Entry>
            <Label Text="Description: "></Label>
            <Entry Text="{Binding Description}" Placeholder="Description"></Entry>
            <Button Text="Save" Clicked="Button_Clicked"></Button>
            <Button Text="Forward" Clicked="Button_Clicked_1"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
